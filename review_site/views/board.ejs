<hr />
<h1>강의 목록</h1>

<table class="table">
  <thead>
    <tr>
      <td>#</td>
      <td>제목</td>
      <td>글쓴이</td>
    </tr>
  </thead>

  <tbody>
    <% for(let post of posts){ %>
    <tr>
      <td><%= posts.indexOf(post) + 1 %></td>
      <td><a href="/posts/<%= post.post_uid %>"><%= post.post_title %></a></td>

      <td><%= post.post_writer %> <%}%></td>
    </tr>
  </tbody>
</table>

